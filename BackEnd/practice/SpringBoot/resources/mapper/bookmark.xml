<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.ssafy.happyhouse.model.mapper.BookmarkMapper">


	<select id="bookmarkList" parameterType="String"
		resultType="BookmarkDto">
		select b.dongCode, concat(sidoName, " ", gugunName, " ", dongName) as addr
		from bookmark b join dongcode d
		on b.dongcode =	d.dongcode
		where b.memberId = #{id}
	</select>
	
	<insert id="insertBookmark" parameterType="map">
		insert into bookmark (memberId, dongCode)
		values (#{id}, #{dongCode})
	</insert>
	
	<delete id="deleteBookmark" parameterType="map">
		delete from bookmark
		where memberId = #{id} and dongCode = #{dongCode}
	</delete>
	
	<delete id="deleteId" parameterType="String">
		delete from bookmark
		where memberId = #{id}
	</delete>
	
</mapper>