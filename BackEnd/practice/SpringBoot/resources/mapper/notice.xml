<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper	namespace="com.ssafy.happyhouse.model.mapper.NoticeMapper">

	<select id="getNoticeList" parameterType="ListParameterDto" resultMap="noticeList">
		select no, title, contents, writedate
		from notice
		<where>
			<include refid="condition"></include>
		</where>
		order by no desc
		limit #{start}, #{currentPerPage}
	</select>

	<select id="getTotalCount" parameterType="ListParameterDto" resultType="int">
		select count(no)
		from notice
		<where>
			<include refid="condition"></include>
		</where>
	</select>

	<sql id="condition">
		<if test="#{key} == 'title'">
			and title like concat('%', #{word}, '%')
		</if>
		<if test="#{key} == 'contents'">
			and contents like concat('%', #{word}, '%')
		</if>
	</sql>

	<resultMap type="NoticeDto" id="noticeList">
		<result column="no" property="no" />
		<result column="title" property="title" />
		<result column="contents" property="contents" />
		<result column="writedate" property="writedate" />
	</resultMap>
	
	<select id="getNotice" parameterType="int" resultType="NoticeDto">
		select no, title, contents, writedate
		from notice
		where no = #{no}
	</select>
	
	<delete id="deleteNotice" parameterType="int">
		delete from notice
		where no = #{no}
	</delete>
	
	<insert id="writeNotice" parameterType="NoticeDto">
		insert into notice (title, contents)
		values (#{title}, #{contents})
	</insert>
	
	<update id="updateNotice" parameterType="NoticeDto">
		update notice
		set title = #{title}, contents = #{contents}
		where no = #{no}
	</update>
	
</mapper>